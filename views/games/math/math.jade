extends ../../layout

mixin numberList
  - var i = 1
  select#jeuduSel
    while i <= 20 
      option(value='#{i}') #{i}
      - i++

block content  
  hr
  .row
    .col-sm-6
      h1 Math Chrono
      p.lead Bonne Chance.
    .col-sm-6
      p 
        img(
          src="http://www.tvqc.com/wp-content/uploads/2013/12/Photo-Monster-High.jpg"
          width="250px"
          height="150px"
          )
  hr
  .row
    .col-sm-6
      h2 Choix du jeu
      p Veuillez choisir un nombre et une opération
      p
        +numberList
        |                     
        select#operandSel
          option(value='+') +
          |                       
          option(value='-') -      
      p
        a.btn.btn-default(role='button' onclick='start()') Commencer »
    .col-sm-6
      p.your-clock
    
  hr
  h2 Operations
  .row
    .col-sm-4  
      p#questions1
    .col-sm-4  
      p#questions2
    .col-sm-4  
      p#questions3 
  p
    a.btn.btn-default#validateBtn(role='button', onclick='validate()') Terminer »    
        
    
    